{
  "compilerOptions": {
    "module": "commonjs",
    "charset": "utf8",
    "outDir": "./dist/",
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false, 
    "sourceMap": false,
    "declaration": false,
    "noEmit": false, 
    "isolatedModules": false,

    "alwaysStrict": true,
    "strictNullChecks": false, 
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,

    "noEmitOnError": true,
    "pretty": true, 
    "removeComments": true, 
  },
  "include": [
    "src",
    "demosrc",
    "types",    
  ],
  // "files": ["src/index.ts", "types/index.d.ts"],
}
